<h1>Liste des produits disponibles :</h1>
<div class="main">
  <div class="row">
  	<% @item.each do |item| %>
        	<div class="flip">
				<div class="flip-card">
					<div class="flip-card-inner">
						<div class="flip-card-front">
			         		<%if item.avatar.attached?%>
	  							<%= image_tag item.avatar, alt: 'avatar',style:"width: 300px; height:300px"  %><br>
							<%else%>
					  			<div class="boxvide"> </div>
					  		<%end%>
					  	</div>
					  	<div class="flip-card-back">
  							<strong> Titre : </strong><br> 
  							<%= item.title %><br>
							<i> <%= link_to "See more", item_path(item.id) %><br/> </i>
						</div>
					</div>
				</div>
			</div>
	<% end %>
  </div> 
</div>
