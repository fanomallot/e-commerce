<body class="index-page sidebar-collapse">
  <div class="page-header clear-filter ground newsession" >
    <div class="content">
      <div class="container">
        <div class="col-md-4 ml-auto mr-auto">
          <div class="card card-login card-plain">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="card-body">
                <div class="input-group no-border input-lg">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                    </span>
                  </div>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "wakawaka@gg.xo", class: "form-control"%>
                </div>
                <div class="input-group no-border input-lg">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                    </span>
                  </div>
                  <%= f.password_field :password, autofocus: true, placeholder: "Password", class: "form-control"%>
                </div>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
              <div class="card-footer text-center">
                <%= f.submit "Log in", class: "btn btn-round btn-lg btn-block bleu" %>
              </div>
              <% end %>
            <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
